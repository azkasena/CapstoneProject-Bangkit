<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".disease.DiseaseDetailActivity">

    <TextView
        android:id="@+id/disease_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/disease_cavities_title"
        android:textColor="@color/blue_700"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/disease_detail_image"
        android:layout_width="356dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disease_detail_title"
        tools:srcCompat="@drawable/caries_cavity" />

    <TextView
        android:id="@+id/disease_detail_description"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:justificationMode="inter_word"
        android:text="@string/disease_cavities_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disease_detail_image" />
</androidx.constraintlayout.widget.ConstraintLayout>